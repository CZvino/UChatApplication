        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UChatClient"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="LightGoldenrodYellow"
        Title="新消息" Height="50" Width="250">
    <Grid>
        <Button x:Name="CloseButton" Content="x" Background="Transparent" Margin="235,0,2,33" BorderBrush="Transparent" Click="CloseButton_Click" />
